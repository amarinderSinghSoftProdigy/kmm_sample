<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.zealsoftsol.medico">

    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".MedicoApp"
        android:label="@string/app_name">

        <activity android:name=".SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".screens.MainActivity" android:launchMode="singleInstance"/>

        <activity android:name=".screens.auth.AuthActivity" android:launchMode="singleInstance"/>

        <activity android:name=".screens.auth.AuthRestoreActivity" android:launchMode="singleInstance"/>

        <activity android:name=".screens.auth.SignUpActivity" android:launchMode="singleInstance"/>
    </application>

</manifest>